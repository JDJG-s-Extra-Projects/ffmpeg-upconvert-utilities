{
    "name": "FFMPEG Upconvert Utilities",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.12-bookworm-slim",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "apt update && apt upgrade -y",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git": {}
    },
}
